{
  "name": "@fhevm/react",
  "version": "1.0.0",
  "description": "React hooks and components for FHEVM SDK",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format cjs,esm --dts --clean",
    "dev": "tsup src/index.tsx --format cjs,esm --dts --watch",
    "test": "vitest",
    "lint": "eslint src",
    "clean": "rm -rf dist node_modules"
  },
  "keywords": [
    "fhe",
    "fhevm",
    "react",
    "hooks"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fhevm/sdk": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8",
    "eslint": "^9.13.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "viem": "^2.0.0",
    "wagmi": "^2.0.0"
  }
}
